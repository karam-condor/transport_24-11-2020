                        <TextBox x:Name="codMotoTextBox" Height="26" Margin="0,35,16,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="15"   IsEnabled="False" Grid.Column="1" Grid.ColumnSpan="3"/>
